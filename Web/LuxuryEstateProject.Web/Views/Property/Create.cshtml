@using LuxuryEstateProject.Data.Models
@model LuxuryEstateProject.Web.ViewModels.Property.PropertyInputModel
@{
    this.ViewData["Title"] = "Add new Property";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<form method="post" class=" form-row col-md-12 offset-md-3"
      enctype="multipart/form-data">
    <h1 class="color-b">@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="color-b"></label>
            <input asp-for="Name" class="form-control " />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="TotalNumberOfFloors"></label>
            <input asp-for="TotalNumberOfFloors" class="form-control" />
            <span asp-validation-for="TotalNumberOfFloors" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Floor" class="color-b"></label>
            <input asp-for="Floor" class="form-control" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Garage"></label>
            <input asp-for="Garage" class="form-control" />
            <span asp-validation-for="Garage" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Type" class="color-b"></label>
            <select asp-for="Type" class="form-control col-md-12" asp-items="Html.GetEnumSelectList<PropertyType>()">
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Bed" class="color-b"></label>
            <input asp-for="Bed" class="form-control" />
            <span asp-validation-for="Bed" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Bath" class="color-b"></label>
            <input asp-for="Bath" class="form-control" />
            <span asp-validation-for="Bath" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Price" class="color-b"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group col-md-6">
            <label asp-for="Size" class="color-b"></label>
            <input asp-for="Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CountryId" class="color-b"></label>
            @*<vc:CategoriesDropDown name="CategoryId"></vc:CategoriesDropDown>*@
            <select asp-for="CountryId" id="Country" class="form-control col-md-12" asp-items="@Model.Countries">
                <option value="" disabled selected>Choose your Country...</option>
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CityId" class="color-b"></label>
            <select asp-for="CityId" id="Region" class="form-control col-md-12" asp-items="@Model.Cities">
                <option value="" disabled selected>Choose The City</option>
            </select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="AgentId" class="color-b"></label>
            <select asp-for="AgentId" class="form-control " asp-items="@Model.AgentsCreateForm">
                <option value="" disabled selected>Choose your Agent</option>
            </select>
            <span asp-validation-for="AgentId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Material" class="color-b"></label>
            <select asp-for="Material" class="form-control col-lg-12" asp-items="Html.GetEnumSelectList<Material>()">
                <option value="" disabled selected>Choose Material</option>
            </select>
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>
    </div>
    <div class="custom-file col-md-12 mt-2">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span asp-validation-for="Images" class="input-group-text">Upload</span>
            </div>
            <div class="custom-file">
                <input asp-for="Images" class="form-control col-md-6 custom-file-input" />
                <label asp-for="Images" class="custom-file-label">Choose file</label>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <div style="text-align:center;">
            <input type="submit" class="btn btn-success col-lg-12 " value="Create" />
        </div>
    </div>
</form>
