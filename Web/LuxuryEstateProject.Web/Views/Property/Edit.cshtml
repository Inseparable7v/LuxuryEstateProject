@using LuxuryEstateProject.Data.Models
@model LuxuryEstateProject.Web.ViewModels.Property.EditPropertyinputModel
@{
    this.ViewData["Title"] = "Edit new Property";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<form method="post" class=" form-row col-md-12 offset-md-3"
      enctype="multipart/form-data">
    <h1 class="color-b">@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="color-b"></label>
            <input asp-for="Name" class="form-control " />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="TotalNumbersOfFloors"></label>
            <input asp-for="TotalNumbersOfFloors" class="form-control" />
            <span asp-validation-for="TotalNumbersOfFloors" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Floor" class="color-b"></label>
            <input asp-for="Floor" class="form-control" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Garage"></label>
            <input asp-for="Garage" class="form-control" />
            <span asp-validation-for="Garage" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Bed" class="color-b"></label>
            <input asp-for="Bed" class="form-control" />
            <span asp-validation-for="Bed" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Bath" class="color-b"></label>
            <input asp-for="Bath" class="form-control" />
            <span asp-validation-for="Bath" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Price" class="color-b"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="valid-feedback">
            Looks good!
        </div>
        <br />
        <div class="form-group col-md-4">
            <label asp-for="Size" class="color-b"></label>
            <input asp-for="Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="AgentId" class="color-b"></label>
            <select asp-for="AgentId" class="form-control " asp-items="@Model.AgentsCreateForm">
                <option value="" disabled selected>Choose your Agent</option>
            </select>
            <span asp-validation-for="AgentId" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <div style="text-align:center;">
                <input type="submit" class="btn btn-success col-lg-12 " placeholder="Edit" />
            </div>
        </div>
    </div>
</form>