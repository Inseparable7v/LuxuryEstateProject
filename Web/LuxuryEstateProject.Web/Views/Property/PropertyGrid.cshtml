<!DOCTYPE html>
@model LuxuryEstateProject.Web.ViewModels.Property.RealEstateListViewModel
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Grid Page</title>
    <meta content="" name="descriptison">
    <meta content="" name="keywords">

    <link href="~/assets/css/style.css" rel="stylesheet">
</head>

<body>
    <main id="main">
        <!-- ======= Intro Single ======= -->

        <section class="intro-single">
            <div class="container">
                @if (this.TempData.ContainsKey("Message"))
                {
                    <div class="alert alert-success">@this.TempData["Message"]</div>
                }
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box">
                            <h1 class="title-single">Our Amazing Properties</h1>
                            <span class="color-text-a">Grid Properties</span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Home</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Properties Grid
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section><!-- End Intro Single-->
        <!-- ======= Property Grid ======= -->
        <section class="property-grid grid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="grid-option">
                            <form>
                                <select class="custom-select">
                                    <option selected>All</option>
                                    <option value="1">New to Old</option>
                                    <option value="2">For Rent</option>
                                    <option value="3">For Sale</option>
                                </select>
                            </form>
                        </div>
                    </div>
                    @foreach (var estateModel in @Model.PropertyViewModels)
                    {
                        <div class="col-md-4">
                            <div class="card-box-a card-shadow">
                                <div class="img-box-a">
                                    <img src="@estateModel.ImageRemoteImageUrl" alt="PropertyImage" class="img-a img-fluid">
                                </div>
                                <div class="card-overlay-hover">
                                    <div class="card-overlay-a-content">
                                        <div class="card-header-a">
                                            <h2 class="card-title-a">
                                                <a href="#">
                                                    <br />@estateModel.Name
                                                </a>
                                            </h2>
                                        </div>
                                        <div class="card-body-a">
                                            <div class="price-box d-flex">
                                                <span class="price-a">rent | @estateModel.Price</span>
                                            </div>
                                            <a asp-area="" asp-action="PropertySingle" asp-route-id="@estateModel.Id" class="link-a">
                                                Click here to view
                                                <span class="ion-ios-arrow-forward"></span>
                                            </a>
                                        </div>
                                        <div class="card-footer-a">
                                            <ul class="card-info d-flex justify-content-around">
                                                <li>
                                                    <h4 class="card-info-title">Area</h4>
                                                    <span>
                                                        @estateModel.Size
                                                        <sup>2</sup>
                                                    </span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Beds</h4>
                                                    <span>@estateModel.Bed</span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Baths</h4>
                                                    <span>@estateModel.Bath</span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Garages</h4>
                                                    <span>@estateModel.Garage</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <partial name="PagingPropertyPartial" model="@Model" />
            </div>
        </section><!-- End Property Grid Single-->
    </main><!-- End #main -->
</body>
</html>