@using LuxuryEstateProject.Common
@using LuxuryEstateProject.Data.Models
@using Microsoft.AspNetCore.Identity

@model LuxuryEstateProject.Web.ViewModels.Property.RealEstateListViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>EstateAgency Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- ======= Intro Section ======= -->
    <div class="intro intro-carousel swiper position-relative">

        <div class="swiper-wrapper">
            @foreach (var estateModel in @Model.PropertyViewModels)
            {
                    <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(@estateModel.ImageRemoteImageUrl)">
                    <div class="overlay overlay-a"></div>
                    <div class="intro-content display-table">
                        <div class="table-cell">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="intro-body">
                                            <p class="intro-title-top">
                                                @estateModel.DistrictName
                                            </p>
                                                    <h1><span class="color-b">@estateModel.Size m²</span></h1>
                                            <h2 class="intro-title mb-4 ">
                                                    <br class="color-b">@estateModel.Name
                                            </h2>
                                             <p class="intro-subtitle intro-price">
                                                        <a asp-area="" asp-controller="Property" asp-action="PropertySingle" asp-route-id="@estateModel.Id"><span class="price-a">@estateModel.Type | $ @estateModel.Price</span></a>
                                             </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="swiper-pagination"></div>
    </div><!-- End Intro Section -->

    <main id="main">

        <!-- ======= Services Section ======= -->
       <section class="section-services section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Our Services</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-box-c foo">
                            <div class="card-header-c d-flex">
                                <div class="card-box-ico">
                                    <span class="fa fa-usd"></span>
                                </div>
                                <div class="card-title-c align-self-center">
                                    <h2 class="title-c">Loans</h2>
                                </div>
                            </div>
                            <div class="card-body-c">
                                <p class="content-c">
                                    Real Estate Financial (Loans)
                                </p>
                            </div>
                            <div class="card-footer-c">
                                <a href="https://www.investopedia.com/articles/personal-finance/100314/commercial-real-estate-loans.asp" class="link-c link-icon">
                                    Read more
                                    <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-box-c foo">
                            <div class="card-header-c d-flex">
                                <div class="card-box-ico">
                                    <span class="fa fa-home"></span>
                                </div>
                                <div class="card-title-c align-self-center">
                                    <h2 class="title-c">Sell</h2>
                                </div>
                            </div>
                            <div class="card-body-c">
                                <p class="content-c">
                                    Avoid those problems when you sell your property
                                </p>
                            </div>
                            <div class="card-footer-c">
                                <a href="https://www.wordstream.com/blog/ws/2015/04/16/real-estate-marketing" class="link-c link-icon">
                                    Read more
                                    <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End Services Section -->
        <!-- ======= Latest Properties Section ======= -->
        <section class="section-property section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Latest Properties</h2>
                            </div>
                            <div class="title-link">
                                <a asp-area="" asp-controller="Property" asp-action="PropertyGrid">
                                    All Property
                                    <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="property-carousel" class="swiper">
                    <div class="swiper-wrapper">

                        @foreach (var estateModel in @Model.PropertyViewModels)
                        {
                        <div class="carousel-item-b swiper-slide">
                            <div class="card-box-a card-shadow">
                                <div class="img-box-a">
                                            <img src="@estateModel.ImageRemoteImageUrl" style="height:400px; width:360px" alt="" class="img-a img-fluid">
                                </div>
                                <div class="card-overlay">
                                    <div class="card-overlay-a-content">
                                        <div class="card-header-a">
                                            <h2 class="card-title-a">
                                                <a href="property-single.html">
                                                        <br /> @estateModel.Name
                                                </a>
                                            </h2>
                                        </div>
                                        <div class="card-body-a">
                                            <div class="price-box d-flex">
                                                    <span class="price-a">rent | $ @estateModel.Price</span>
                                            </div>
                                                <a asp-area="" asp-controller="Property" asp-action="PropertySingle" asp-route-id="@estateModel.Id" class="link-a">
                                                    Click here to view
                                                    <span class="ion-ios-arrow-forward"></span>
                                                </a>
                                        </div>
                                        <div class="card-footer-a">
                                            <ul class="card-info d-flex justify-content-around">
                                                <li>
                                                    <h4 class="card-info-title">Area</h4>
                                                    <span>
                                                            @estateModel.Size
                                                        <sup>2</sup>
                                                    </span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Beds</h4>
                                                        <span>@estateModel.Bed</span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Baths</h4>
                                                        <span>@estateModel.Bath</span>
                                                </li>
                                                <li>
                                                    <h4 class="card-info-title">Garages</h4>
                                                        <span>@estateModel.Garage</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- End carousel item -->
                        }
                    </div>
                </div>
              <div class="propery-carousel-pagination carousel-pagination"></div>

            </div>
        </section><!-- End Latest Properties Section -->
        <!-- ======= Agents Section ======= -->
         <section class="section-agents section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Best Agents</h2>
                            </div>
                            <div class="title-link">
                                <a asp-area="" asp-controller="Agent" asp-action="AgentGrid">
                                    All Agents
                                    <span class="ion-ios-arrow-forward"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var agent in @Model.Agents)
                    {
                            <div class="col-md-4">
                                <div class="card-box-d">
                                    <div class="card-img-d">
                                        <img src="@agent.ImageRemoteImageUrl" style="height: 450px;"alt="" class="img-d img-fluid">
                                    </div>
                                    <div class="card-overlay card-overlay-hover">
                                        <div class="card-header-d">
                                            <div class="card-title-d align-self-center">
                                                <h3 class="title-d">
                                                    <a asp-area="" asp-controller="Agent" asp-action="SingleAgent" asp-route-id="@agent.Id" class="link-two">
                                                    @agent.Name @agent.LastName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="card-body-d">
                                            <p class="content-d color-text-a">
                                            @agent.Id
                                            @agent.Description
                                            </p>
                                            <div class="info-agents color-a">
                                                <p>
                                                    <strong>Phone: </strong> @agent.Phone
                                                </p>
                                                <p>
                                                    <strong>Email: </strong> @agent.Email
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </section><!-- End About Section-->
        <!-- ======= Latest News Section ======= -->
        <section class="section-news section-t8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-wrap d-flex justify-content-between">
                            <div class="title-box">
                                <h2 class="title-a">Latest News</h2>
                            </div>
                            <div class="title-link">
                                <a asp-area="" asp-controller="Blog" asp-action="All">
                                    All Blogs
                                    <span class="bi bi-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="news-carousel" class="swiper">
                    <div class="swiper-wrapper">
                        @foreach (var blog in @Model.Blogs)
                    {
                        <div class="carousel-item-c swiper-slide">
                            <div class="card-box-b card-shadow news-box">
                                <div class="img-box-b">
                                        <img src="@blog.ImageUrl" alt="" class="img-b img-fluid">
                                </div>
                                <div class="card-overlay">
                                    <div class="card-header-b">
                                        <div class="card-category-b">
                                                    <a asp-controller="Blog" asp-action="ById" asp-route-id="@blog.Id" class="category-b">@blog.Category</a>
                                            </div>
                                        <div class="card-title-b">
                                            <h2 class="title-2">
                                                    <a asp-controller="Blog" asp-action="ById" asp-route-id="@blog.Id">
                                                        @blog.Name
                                                            <br> new
                                                    </a>
                                            </h2>
                                        </div>
                                        <div class="card-date">
                                            <span class="date-b">@blog.Date</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- End carousel item -->
                        }
                    </div>
                </div>
                <div class="news-carousel-pagination carousel-pagination"></div>
            </div>
        </section><!-- End Latest News Section -->
    </main><!-- End #main -->
    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>

</html>