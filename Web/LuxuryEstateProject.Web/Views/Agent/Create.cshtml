@using LuxuryEstateProject.Data.Models
@model LuxuryEstateProject.Web.ViewModels.Agent.AgentInputViewModel
@{
    this.ViewData["Title"] = "Add new Agent";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />

<h1 class="color-b col-sm-12">@this.ViewData["Title"]</h1>
<form method="post" class="form-row col-sm-12"
      enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-2">
            <label asp-for="Name" class="color-b"></label>
            <input asp-for="Name" class="form-control " />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Phone" class="color-b"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Email" class="color-b"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="custom-file col-sm-6 row">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span asp-validation-for="Images" class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input asp-for="Images" class="form-control col-md-6 custom-file-input" />
                    <label asp-for="Images" class="custom-file-label">Choose file</label>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-lg-3 col-sm-12">
        <div style="text-align:center;">
            <input type="submit" class="btn btn-success col-2" value="Create" />
        </div>
    </div>
</form>
